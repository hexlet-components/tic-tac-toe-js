{
  "name": "@hexlet/tic-tac-toe",
  "version": "0.0.13",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "types": "./dist/src/index.d.ts"
    },
    "./public/*.css": {
      "import": "./dist/public/*.css"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "make lint",
    "pre-push": "make test"
  },
  "scripts": {
    "dev": "vite",
    "lint": "eslint .",
    "test": "vitest run",
    "test-preview": "vitest-preview",
    "build:pages": "vite build",
    "build": "rm -rf dist && tsc --build && cp -r public dist/",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.7",
    "@eslint/js": "^9.21.0",
    "@stylistic/eslint-plugin": "^4.1.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.6.1",
    "eslint": "^9.21.0",
    "globals": "^16.0.0",
    "nock": "^14.0.1",
    "release-it": "^18.1.2",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.25.0",
    "vite": "^6.2.0",
    "vitest": "^3.0.7",
    "vitest-preview": "^0.0.1"
  },
  "dependencies": {
    "jiti": "^2.4.2",
    "jsdom": "^26.0.0",
    "npm-check-updates": "^17.1.15"
  }
}
